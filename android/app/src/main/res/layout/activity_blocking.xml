<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    android:background="#FF0000FF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_block"
        android:layout_marginBottom="32dp"
        android:elevation="8dp" />

    <TextView
        android:id="@+id/blocked_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App is blocked"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a moment to refocus"
        android:textSize="18sp"
        android:textColor="#E0FFFFFF"
        android:letterSpacing="0.01"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivational quote here"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginBottom="48dp"
        android:padding="24dp"
        android:background="@drawable/quote_background"
        android:elevation="4dp" />

    <Button
        android:id="@+id/open_focusflow_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Open FocusFlow"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF6B35"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:stateListAnimator="@null" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Go to Home Screen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF6B35"
        android:background="@drawable/button_secondary"
        android:elevation="6dp"
        android:stateListAnimator="@null" />

</LinearLayout>